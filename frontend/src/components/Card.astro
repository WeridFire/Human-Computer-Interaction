---
interface Props {
	title: string;
	body: string;
	href?: string;
}

const { href, title, body} = Astro.props;
---

<a href={href} class="flex flex-col h-[150px] w-[300px] bg-zinc-900 rounded-md shadow-black shadow-md hover:scale-110 transition-all duration-300 ease-in-out">
	<div class="w-full px-2 text-white font-bold text-2xl text-end">
		{title}
	</div>
 
	<div class="h-full text-white px-1">
		{href && body}
		{!href && <span class="italic">Coming soon...</span>}
	</div>
	
</a>