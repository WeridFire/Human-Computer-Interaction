<div class="text-center text-gray-500 dark:text-gray-400 space-y-4 bg-white/15 py-6 px-8 rounded-2xl shadow-lg shadow-slate-900 backdrop-blur-xl md:transition md:ease-in-out md:hover:-translate-y-1 md:hover:scale-110 md:duration-300">
    <img class="mx-auto mb-4 w-36 h-36 rounded-full items-center object-cover transition-transform duration-500 hover:animate-spin-slow" src={img ? img : "/Human-Computer-Interaction/team/profile-icon.jpg"} alt={name ? name : "Alt name"}>
    <h3 class="mb-1 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">
        {name ? name : "Nome"}
    </h3>
    <ul class="flex justify-center mt-4 space-x-4 items-center translate-x-0.5">
        {mail &&
        <li>
            <a href={mail} class="text-white hover:text-gray-700 flex items-center w-6 h-6">
                <svg class="w-full h-full" fill="currentColor" viewBox="0 0 1920 1920"><path d="M1920 428.266v1189.54l-464.16-580.146-88.203 70.585 468.679 585.904H83.684l468.679-585.904-88.202-70.585L0 1617.805V428.265l959.944 832.441L1920 428.266ZM1919.932 226v52.627l-959.943 832.44L.045 278.628V226h1919.887Z" fill-rule="evenodd"/></svg>
