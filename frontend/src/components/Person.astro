---
interface Props {
    name?: string,
    img?: string,
    mail?: string,
    github?: string,
    instagram?: string,
    linkedin?: string,
    inverted?: boolean
}

const { name, img, mail, github, instagram, linkedin, inverted} = Astro.props;
