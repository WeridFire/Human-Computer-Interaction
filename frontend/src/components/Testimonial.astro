---
interface Props {
	name: string;
    review: string;
}

const { name, review } = Astro.props;
---



<div class="w-1/6 aspect-square bg-gray-100 m-1 rounded-md shadow-lg flex flex-col">
    <div class="w-full h-2/6 flex flex-row justify-between py-2 pl-2">
        <div class="bg-gradient-to-br from-gray-800 to-gray-500 rounded-full aspect-square shadow-black shadow-md" />
        <div class="w-full flex flex-col h-fit items-start px-4 align-middle">
            <div class="h-1/6 text-center pt-2 text-lg font-medium">{name}</div>
            <div class="h-1/6 text-center text-2xl font-extrabold text-yellow-600">★★★★★</div>
        </div>
    </div>
    <div class="px-4 h-auto py-2 text-center text-md">{review}</div>
</div>